<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:paddingBottom="?attr/actionBarSize"
    android:layout_height="wrap_content">
    <fragment class="com.example.stockapp.totalcard.TotalCard"
        android:layout_height="wrap_content"
        android:id="@+id/home_total_card"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="12dp"
        android:layout_width="match_parent"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/db_line_graph_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:elevation="10dp"
        app:layout_constraintTop_toBottomOf="@id/home_total_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    <fragment class="com.example.stockapp.stockview.LineGraphFragment"
        android:layout_height="300dp"
        android:id="@+id/db_line_graph"
        android:layout_margin="12dp"
        android:layout_width="match_parent"/>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>